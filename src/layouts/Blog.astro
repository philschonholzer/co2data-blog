---
import { Picture } from '@astrojs/image/components'
import type { MarkdownInstance } from 'astro'
import { getEntry } from 'astro:content'
import type { AuthorCollection, BlogPost } from 'src/types'
import { authorImage, formatDate } from 'src/utils'
import Layout from './Layout.astro'

const { frontmatter } = Astro.props as MarkdownInstance<BlogPost>
const date = formatDate(frontmatter.publishDate)
const key = `${frontmatter.author}/index.mdx` as AuthorCollection['id']
const author = await getEntry('author', key)

const image = await authorImage(author.slug)
---

<Layout title={`${frontmatter.title} | COâ‚‚ data blog`}>
  <main>
    <article>
      <header>
        <h1>{frontmatter.title}</h1>
        <p class="description">{frontmatter.description}</p>
        <div class="information">
          <address>
            <a rel="author" href={`/author/${author.slug}`}>
              <Picture
                class="author-preview-image"
                src={image}
                widths={[30, 60, 90]}
                sizes="30px"
                aspectRatio={1}
                alt={`Photo of ${author.data.name}`}
              />
              <p>{author.data.name}</p>
            </a>
          </address>
          <i>on</i>
          <time datetime={date}>{date}</time>
        </div>
      </header>
      <slot />
    </article>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1em;
    max-width: var(--page-width);
  }

  h1 {
    margin-bottom: 0;
  }

  header {
    margin-bottom: 2em;
  }

  .description {
    font-weight: bold;
  }

  .information {
    font-size: 0.8em;
    font-weight: 800;
    color: var(--accent-color);
  }

  .information address {
    display: inline;
    font-style: normal;
  }

  .information address a {
    display: inline-flex;
    align-items: baseline;
    color: inherit;
  }

  .information address p {
    margin: 0;
  }

  .information i {
    font-style: normal;
    opacity: 0.6;
  }

  :global(picture) {
    margin-inline: auto;
  }

  :global(img).author-preview-image {
    display: inline-block;
    width: 30px;
    height: auto;
    aspect-ratio: 1;
    border-radius: 50%;
    border: 2px solid var(--text-color);
    text-decoration: none;
    margin-right: 0.5em;
    vertical-align: middle;
  }
</style>

<style is:global>
  p {
    line-height: 1.5em;
  }
</style>
